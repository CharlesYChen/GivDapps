<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.givdapps.androidapp">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- splashscreen logistics, the app loads this first -->
        <activity
            android:name="com.givdapps.androidapp.SplashBackground"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.givdapps.androidapp.IntroScreen"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.givdapps.androidapp.CausesScroller"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.givdapps.androidapp.SignIn"
            android:theme="@style/AppTheme"/>
        <activity
            android:name="com.givdapps.androidapp.CausesNavigationDrawer"
            android:label="Campaign"
            android:theme="@style/AppTheme"/>
        <activity
            android:name="com.givdapps.androidapp.InterestScreen"></activity>
        <activity
            android:name="com.givdapps.androidapp.NewPassword"
            android:theme="@style/AppTheme"/>
        <activity
            android:name="com.givdapps.androidapp.SignUpScreen"
            android:theme="@style/AppTheme"/>
        <activity
            android:name="com.givdapps.androidapp.CauseInfo"
            android:theme="@style/AppTheme"/>
        <activity
            android:name="com.givdapps.androidapp.DonateScreen"
            android:theme="@style/AppTheme.PopUpWindowTheme"/>
        <activity
            android:name="com.givdapps.androidapp.PaymentMethod"
            android:theme="@style/AppTheme"/>

    </application>

</manifest>