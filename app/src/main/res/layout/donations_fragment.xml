<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/donations_fragment">




    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="175dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Donate"
            android:id="@+id/donation_fragment_button">

        </Button>
    </LinearLayout>
    </RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="230dp"
    android:orientation="horizontal"
    android:layout_marginLeft="100dp">

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_star"/>
    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="5"/>
    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_chat"/>
    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="45"/>
    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_donation_page_info"/>
</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="300dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="@drawable/ic_heart"/>
        <TextView
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:text="$4000 Total Goal"
            android:textSize="18sp"
            />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="@drawable/ic_calender"/>
        <TextView
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:text="17 Days Left"
            android:textSize="18sp"/>

    </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="40dp"
       android:layout_marginTop="360dp"
    android:orientation="horizontal">
   <ImageView
       android:layout_width="40dp"
       android:layout_height="match_parent"
       android:background="@drawable/ic_coin"
       />
    <TextView
        android:layout_width="160dp"
        android:layout_height="match_parent"
        android:text="$1000 Remaining"
        android:textSize="18sp"
        />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:background="@drawable/profile_picture"
        />
    <TextView
        android:layout_width="160dp"
        android:layout_height="match_parent"
        android:text="92 Doners"
        android:textSize="18sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="420dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/navy"
            android:text="sample text sample text
            sample text sample text sample text sample text sample text sample text
             sample text sample text sample text sample text sample text"/>

    </LinearLayout>


</RelativeLayout>