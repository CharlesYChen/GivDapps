<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.limda_000.givdappssignup.SignUp"
    android:background="@drawable/app_background"

    >

    <ImageView
        android:id="@+id/whiteBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="80dp"
        android:layout_marginEnd="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="120dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/whitebox"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/doneButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@color/yellow"
        android:text="Done"
        android:textAllCaps="false"

        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="@+id/whiteBackground"
        app:layout_constraintRight_toRightOf="@+id/whiteBackground"
        app:layout_constraintTop_toBottomOf="@+id/whiteBackground" />

    <TextView
        android:id="@+id/fNView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="First Name"
        app:layout_constraintTop_toTopOf="@+id/whiteBackground"
        android:layout_marginStart="24dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/whiteBackground"
        android:layout_marginLeft="8dp"
        android:textColor="@color/grayText"
        app:layout_constraintLeft_toLeftOf="@+id/whiteBackground" />
    <TextView
        android:id="@+id/lNView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Last Name"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/fNText"
        android:layout_marginLeft="8dp"
        android:textColor="@color/grayText"
        app:layout_constraintLeft_toLeftOf="@+id/whiteBackground" />

    <TextView
        android:id="@+id/emailView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Email"
        android:layout_marginStart="24dp"
        android:textColor="@color/grayText"
        tools:layout_editor_absoluteY="444dp"
        app:layout_constraintTop_toBottomOf="@+id/lNText"
        app:layout_constraintLeft_toLeftOf="@+id/whiteBackground"
        tools:layout_editor_absoluteX="44dp" />

    <TextView
        android:id="@+id/passwordView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Password"
        android:layout_marginStart="24dp"
        android:textColor="@color/grayText"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/emailText"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/whiteBackground" />

    <EditText
        android:id="@+id/fNText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="13"
        android:hint=""
        android:inputType="none"
        android:backgroundTint="@color/grayText"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/fNView"
        android:layout_marginLeft="21dp"
        app:layout_constraintLeft_toLeftOf="@+id/whiteBackground"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/whiteBackground" />
    <EditText
        android:id="@+id/lNText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="13"
        android:hint=""
        android:inputType="none"
        android:backgroundTint="@color/grayText"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/lNView"
        android:layout_marginLeft="21dp"
        app:layout_constraintLeft_toLeftOf="@+id/whiteBackground"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/whiteBackground" />
    <EditText
        android:id="@+id/emailText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="13"
        android:hint=""
        android:inputType="none"
        android:backgroundTint="@color/grayText"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/emailView"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="@+id/whiteBackground"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/whiteBackground" />
    <EditText
        android:id="@+id/passwordText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="13"
        android:hint=""
        android:inputType="textWebPassword"
        android:backgroundTint="@color/grayText"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/passwordView"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="@+id/whiteBackground"
        android:layout_marginRight="8dp"

        app:layout_constraintRight_toRightOf="@+id/whiteBackground"
        app:layout_constraintHorizontal_bias="0.0" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/profile_image"
        app:civ_border_color="@color/colorPrimaryDark"
        app:civ_border_width="2dp"
        android:layout_centerVertical="true"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="60dp"
        android:src="@drawable/ic_action_name"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
